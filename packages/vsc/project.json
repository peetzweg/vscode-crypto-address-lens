{
  "name": "vsc",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/vsc/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/vsc",
        "external": ["vscode"],
        "format": ["cjs"],
        "platform": "node",
        "bundle": true,
        "sourcemap": true,
        "main": "packages/vsc/src/main.ts",
        "tsConfig": "packages/vsc/tsconfig.app.json",
        "assets": ["packages/vsc/src/assets"],
        "generatePackageJson": true,
        "thirdParty": true
      }
    },
    "watch": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/vsc",
        "external": ["vscode"],
        "format": ["cjs"],
        "platform": "node",
        "sourcemap": true,
        "watch": true,
        "main": "packages/vsc/src/main.ts",
        "tsConfig": "packages/vsc/tsconfig.app.json",
        "assets": ["packages/vsc/src/assets"],
        "generatePackageJson": true,
        "thirdParty": true
      }
    },
    "prepublish": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/vsc",
        "external": ["vscode"],
        "format": ["cjs"],
        "outputFileName": "main",
        "platform": "node",
        "bundle": true,
        "minify": true,
        "main": "packages/vsc/src/main.ts",
        "tsConfig": "packages/vsc/tsconfig.app.json",
        "assets": [
          { "input": "packages/vsc/", "glob": "logo.png", "output": "/" },
          { "input": "packages/vsc/", "glob": "README.md", "output": "/" },
          { "input": "packages/vsc/", "glob": "LICENSE", "output": "/" },
          { "input": "packages/vsc/", "glob": "CHANGELOG.md", "output": "/" }
        ],
        "generatePackageJson": true,
        "thirdParty": true
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "dependsOn": ["prepublish"],
      "options": {
        "commands": [
          "mv ./main.cjs ./main.js",
          "vsce publish --no-dependencies"
        ],
        "parallel": false,
        "cwd": "dist/packages/vsc"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/vsc/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/vsc/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
